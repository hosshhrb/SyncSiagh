# Database
# SQLite (fast, no setup needed - default for development)
DATABASE_URL="file:./dev.db"
# PostgreSQL (for production - uncomment and comment SQLite above)
# DATABASE_URL="postgresql://siagh_user:siagh_pass@localhost:5432/siagh_sync"

# Redis (optional - set ENABLE_REDIS=false to disable)
ENABLE_REDIS="false"
REDIS_HOST="localhost"
REDIS_PORT=6379

# CRM System (Payamgostar)
CRM_API_BASE_URL="https://crm.payamgostar.com"
CRM_USERNAME="your-username"
CRM_PASSWORD="your-password"

# Finance System (Siagh)
# Base URL from your API docs: http://172.16.16.15
FINANCE_API_BASE_URL="http://172.16.16.15"
FINANCE_USERNAME="مدیر سیستم"
# IMPORTANT: Password MUST be MD5 hashed!
# Use: npm run hash-password your-password
# Example from docs: 92C0ED8C3EC1DD67D834D3005A592A80
FINANCE_PASSWORD="92C0ED8C3EC1DD67D834D3005A592A80"

# Webhook
WEBHOOK_SECRET="change-this-to-a-secure-random-string"
WEBHOOK_BASE_URL="http://localhost:3000"

# Sync Settings
POLL_INTERVAL_SECONDS=300
MAX_RETRY_ATTEMPTS=3
ENABLE_WEBHOOKS=false

# App
PORT=3000
NODE_ENV=development
